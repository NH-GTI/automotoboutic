					FROM `'._DB_PREFIX_.'customproducts_carro_gam` cg
					INNER JOIN  `'._DB_PREFIX_.'customproducts_gammes` g ON (g.`id_gamme` = cg.`id_gam`)
					WHERE `id_carro` = ' . $id_carro . ' AND g.`status` = 1
